{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.1",
            "excludeFiles": "{node_modules/**,tests/**,storage/logs/**,public/assets/**,resources/assets/**}"
        }
    },
    "routes": [
        { "src": "/build/(.*)", "dest": "/public/build/$1" },
        { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}